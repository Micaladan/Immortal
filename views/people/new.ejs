<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class="text-center">New Person</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/people" method="POST">
            <div>
                <label class="form-label" for="name">Name</label>
                <input class="form-control mb-3" type="text" id="name" name="person[name]" placeholder="John Smith"
            </div>
            <div>
                <label class="form-label" for="location">Location</label>
                <input class="form-control mb-3" type="text" id="location" name="person[location]"> 
            </div>
            <div>
                <label class="form-label" for="image">Image URL</label>
                <input class="form-control mb-3" type="text" id="image" name="person[image]"> 
            </div>
           
            <div>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control mb-3" type="text" id="description" name="person[description]"></textarea> 
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Person</button>
            </div>
          
        </form>
        <div>
        <a href="/people">All People</a>
        </div>
        <h2>Need a person name?</h2>
<a href="http://names.drycodes.com/10?nameOptions=boy_names" target="_blank">10 Boy Names</a>
<a href="http://names.drycodes.com/10?nameOptions=girl_names" target="_blank">10 Girl Names</a>
    </div>
</div>


