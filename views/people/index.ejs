<% layout("layouts/boilerplate")%>
    <h1>All People</h1>
    <div>
        <a href="/people/new">Add a New Person</a>
    </div>
   
        <% for(let person of people) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="<%= person.image %>" alt="">
                    </div>
                    <div class="card-body col-md-8">
                        <h5 class="card-title"><%= person.name %></h5>
                        <p class="card-text"><%= person.description %></p>
                        <p class="card-text">
                            <small class="text-muted"><%= person.location %></small>
                        </p>
                        <a href="/people/<%= person._id %>" class="btn btn-primary">View <%= person.name %></a>
                    </div>
                </div>
            </div>
            <li> <a href="/people/<%= person._id %>"><%= person.name %></a>  </li>
        <% }%>
    </ul>