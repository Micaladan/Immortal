<% layout("layouts/boilerplate")%>
    <a href="/notes/new" class="btn btn-success" style="float: right;">Add a New Note</a>
    <h1>All Notes</h1>   
        <% for(let note of notes) {%>
            <div class="card" mb-3>
                <div class="row">
                    <div class="card-body col-md-8">
                        <h5 class="card-title"><%= note.title %></h5>
                        <p class="card-text text-truncate"><%= note.description %></p>
                        <p class="card-text">
                        </p>
                        <a href="/notes/<%= note._id %>" class="btn btn-primary">View <%= note.name %></a>
                    </div>
                </div>
            </div>
        <% }%>
    </ul>