<% layout("layouts/boilerplate")%>
<div class="row">
    <h1 class="text-center">New Note</h1>
    <div class="col-6 offset-3">
        <form action="/notes" method="POST">
            <div>
                <label class="form-label" for="title">Title</label>
                <input class="form-control mb-3" type="text" id="title" name="note[title]"> 
            </div>
           
            <div>
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control mb-3" type="text" id="description" name="note[description]"></textarea> 
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Note</button>
            </div>
          
        </form>
        <div>
        <a href="/notes">All Notes</a>
        </div>
    
    </div>
</div>


