<% layout("layouts/boilerplate")%>

    <div class="row">
        <div class="col-sm-6 offset-sm-3">
            <div class="card mb-3">
                <div style="padding-top: 75%; height: 0; overflow: hidden; background: url(<%= dndperson.image %>); background-size: cover;" alt="">   
                </div>
                    <div class="card-body">
                    <h5 class="card-title"><%= dndperson.name %></h5>
                    <p class="card-text"><%= dndperson.description %></p>
                </div>           
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted"><%= dndperson.location %></li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/dndpeople/<%= dndperson._id %>/edit">Edit</a>
                    <form class="d-inline"  action="/dndpeople/<%= dndperson._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                        </form>
                </div>
                <div class="card-footer text-muted">
                   <a href="/dndpeople">All People</a>
                </div>                
            </div>
        </div>
 
